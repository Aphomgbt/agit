<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.madgag.agit" android:versionCode="1" android:versionName="1.0">
	<application 
	android:theme="@style/Theme.App"
	android:icon="@drawable/icon"
	 android:label="@string/app_name"
	  android:debuggable="true">
		<activity android:name="RepositoryManagementActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="file" />
			</intent-filter>
		</activity>

		<activity android:name="Clone" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.madgag.git.clone.prepare" />
				<data android:mimeType="text/*" android:scheme="git" />
				<data android:mimeType="text/*" android:scheme="http" />
				<data android:mimeType="text/*" android:scheme="https" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<service android:name="GitOperationsService">
			<intent-filter>
				<action android:name="git.FETCH" />
			</intent-filter>
		</service>
		
		<provider android:name="GitInfoProvider"
			android:authorities="com.madgag.agit.gitinfoprovider"></provider>

		<activity android:name="RepoLogActivity">
			<intent-filter>
				<action android:name="git.log" />
				<data android:scheme="file" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="RepositoryListActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="7" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 